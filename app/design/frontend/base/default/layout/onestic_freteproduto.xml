<layout>
    <onestic_freteproduto_left>
        <update handle="onestic_freteproduto_skeleton" />
        <reference name="left">
            <action method="insert"><block>shipping.estimate.form</block></action>
        </reference>
    </onestic_freteproduto_left>

    <onestic_freteproduto_right>
        <update handle="onestic_freteproduto_skeleton" />
        <reference name="right">
            <action method="insert"><block>shipping.estimate.form</block></action>
        </reference>
    </onestic_freteproduto_right>

    <onestic_freteproduto_estimate_estimate>
        <block type="onestic_freteproduto/estimate_result" name="shipping.estimate.result" template="onestic/freteproduto/estimate/result.phtml" output="toHtml" />
    </onestic_freteproduto_estimate_estimate>
    
    <catalog_product_view>
    	<update handle="onestic_freteproduto_skeleton" />
        <reference name="product.info">
            <block name="shipping.estimate.form" type="onestic_freteproduto/estimate_form" template="onestic/freteproduto/estimate/form.phtml" />
        </reference>
    </catalog_product_view>

</layout>

