<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="appendItem" ifconfig="utils/settings/use_jquery">
                <type>skin_js</type>
                <name>js/gamuza/utils/jquery-1.8.3.min.js</name>
            </action>
            <block type="core/text" name="com.gamuza.js.jquery.noconflict">
                <action method="setText" ifconfig="utils/settings/use_jquery_noconflict">
                    <text><![CDATA[<script type="text/javascript">var $j = jQuery.noConflict (false);</script>]]></text>
                </action>
            </block>
        </reference>
    </default>
    <checkout_onepage_success translate="label">
        <reference name="content">
            <reference name="checkout.success">
                <block type="utils/onepage_success_info" />
		<block type="sales/order_items" name="order_items" template="sales/order/items.phtml">
		    <action method="addItemRender"><type>default</type><block>sales/order_item_renderer_default</block><template>sales/order/items/renderer/default.phtml</template></action>
		    <action method="addItemRender"><type>grouped</type><block>sales/order_item_renderer_grouped</block><template>sales/order/items/renderer/default.phtml</template></action>
		    <block type="sales/order_totals" name="order_totals" template="sales/order/totals.phtml">
		        <action method="setLabelProperties"><value>colspan="4" class="a-right"</value></action>
		        <action method="setValueProperties"><value>class="last a-right"</value></action>
		        <block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml" />
		    </block>
		</block>
		<block type="utils/onepage_success_additional" />
            </reference>
        </reference>
    </checkout_onepage_success>
</layout>
