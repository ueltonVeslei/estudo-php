<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<onestic_checkout_onepage_index ifhandle="onestic_checkout_virtual">
		<remove name="checkout.onepage.billing" />
		<remove name="checkout.onepage.shipping" />
		<remove name="checkout.onepage.login" />
		<remove name="checkout.onepage.login.before" />
		<remove name="checkout.onepage.shipping_method" />
		<reference name="checkout.onepage">
			<block type="checkout/onepage_billing" name="checkout.onepage.virtual.billing" as="billing" template="onestic/checkout/onepage/virtual/billing.phtml">
				<block type="checkout/onepage_login" name="checkout.onepage.virtual.login" as="login" template="onestic/checkout/onepage/login.phtml">
					<block type="page/html_wrapper" name="checkout.onepage.virtual.login.before" as="login_before" translate="label">
						<label>Login/Registration Before</label>
						<action method="setMayBeInvisible">
							<value>1</value>
						</action>
					</block>
				</block>
			</block>
		</reference>
		<reference name="checkout.progress">
			<action method="setTemplate"><template>onestic/checkout/onepage/virtual/progress.phtml</template></action>
		</reference>
	</onestic_checkout_onepage_index>

	<onestic_checkout_onepage_progress ifhandle="onestic_checkout_virtual">
		<reference name="root">
			<action method="setTemplate"><template>onestic/checkout/onepage/virtual/progress.phtml</template></action>
		</reference>
	</onestic_checkout_onepage_progress>

	<onestic_checkout_onepage_paymentmethod ifhandle="onestic_checkout_virtual">
		<remove name="checkout.onepage.billing" />
	</onestic_checkout_onepage_paymentmethod>
</layout>