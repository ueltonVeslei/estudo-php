<?php $_count = 0; ?>
<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
        <h2 class="avaliacoes-title"><?php echo count($_items) . " " .  $this->__('Customer Reviews') ?></h2>
        <?php echo $this->getChildHtml('toolbar') ?>
        <dl>
        <?php foreach ($_items as $_review):?>
        <?php if($_count == 10){break;} $_count++;?>
            <div class="review-item">
                <dt>
                    <span class="main-review"><?php echo $this->escapeHtml($_review->getTitle()) ?></span>
                </dt>
                <dd>
                    <?php $_votes = $_review->getRatingVotes(); ?>
                    <?php if (count($_votes)): ?>
                    <table class="ratings-table">
                        <col width="1" />
                        <col />
                        <tbody>
                            <?php foreach ($_votes as $_vote): ?>
                            <tr>
                                <td>
                                    <div class="rating-box">
                                        <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                    </div>
                                </td>
                            </tr>
                            <?php endforeach; ?>
                        </tbody>
                    </table>
                    <?php endif; ?>
                    <?php echo nl2br($this->escapeHtml($_review->getDetail())) ?>
                    <span class="date"><?php echo $this->__('%s', $this->formatDate($_review->getCreatedAt()), 'long') ?></span>
                </dd>
            </div>
        <?php endforeach; ?>
        </dl>
        <?php if(count($_items)>10) { ?>
            <div class="ver-todos">
                <a href="<?php echo Mage::getBaseUrl() ?>review/product/list/id/<?php echo $this->getProduct()->getId()?>/#customer-reviews">Ver Todos</a>
            </div>
        <?php  } ?>
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>
</div>
