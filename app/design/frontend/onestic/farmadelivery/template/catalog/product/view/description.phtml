 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php $_description = $this->getProduct()->getDescription(); ?>
<?php $_descriptionStandout = $this->getProduct()->getDescriptionStandout(); ?>
<?php $_product = $this->getProduct(); ?>
<?php $_helper = $this->helper('catalog/output'); ?>
<?php if ($_description): ?>
    <h2><?php echo $this->__('Descrição do produto') ?></h2>
    <div class="std">
        <!-- LETT-ECONTENT-PLACEHOLDER -->
        <div id="lett-econtent-placeholder"></div>
        <!-- END LETT-ECONTENT-PLACEHOLDER -->
        <?php if ($_descriptionStandout): ?>
            <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), nl2br($_descriptionStandout), 'standout') ?>
        <?php endif; ?>
        <br/>
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), nl2br($_description), 'description') ?>
    </div>

    <div class="bula_manual_description">
        <?php if($_product->getBula()!='') : ?>
            <div class="bula-description">
                <h2><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?> Bula</h2>
                <embed src="https://www.farmadelivery.com.br/media/upload/pdf/BULAS/<?php echo $_helper->productAttribute($_product, $this->htmlEscape($_product->getBula()), 'bula')?>#toolbar=0" type="application/pdf" width="100%" height="600px" />
            </div>
        <?php endif;?>
        <?php if($_product->getManual()!='') : ?>
            <div class="manual-description">
                <h2><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?> Manual</h2>
                <embed src="https://www.farmadelivery.com.br/media/upload/pdf/Manuais/<?php echo $_helper->productAttribute($_product, $this->htmlEscape($_product->getManual()), 'manual')?>#toolbar=0" type="application/pdf" width="100%" height="600px" />
            </div>
        <?php endif;?>
    </div>

<!--
    <div id="alerta-texto">
        <?php// echo $this->getLayout()->createBlock('cms/block')->setBlockId('aviso-produto')->toHtml(); ?>
    </div>
-->
<?php endif; ?>



