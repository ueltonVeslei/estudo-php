</script>

<?php endif; ?>

<script type="text/javascript">
    jQuery(".zoomelevate").ezPlus({
        zoomType: 'inner',
        gallery: 'ezgallery',
        cursor: 'pointer',
        galleryActiveClass: "active",
        borderSize: 0
    });

    jQuery(document).ready(function(){
        jQuery('.product-image-thumbs a.thumb-link img').click(function(){
            setTimeout(function(){
                jQuery('.zoomImg').attr('src',jQuery('.gallery-image.visible').attr('data-zoom-image'));
            }, 1000);

        });  });
    jQuery('.ver-video').click(function(){
        jQuery('.container-video').show();
        jQuery('.inner-container-productimage').css('visibility', 'hidden');
        jQuery('.product-view .social-share').css('padding-top', '70px');
    });

    jQuery('#ezgallery a:not(.ver-video)').click(function(){
        jQuery('.container-video').hide();
        jQuery('.inner-container-productimage').css('visibility', 'initial');
        jQuery('.product-view .social-share').css('padding-top', '0px');
    });

</script>