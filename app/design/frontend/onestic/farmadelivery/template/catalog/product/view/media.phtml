<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
    <?php if (count($this->getGalleryImages()) > 0): ?>
    <div class="more-views" id="ezgallery">
        <ul>
            <?php if($_product->getVideo()): ?>
            <li>
                <a href="#ver-video" class="ver-video" style="background: #f1f1f1 url(<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(70,70); ?>) no-repeat center center;">
                    <div></div>
                </a>
            </li>
            <?php endif; ?>
            <?php foreach ($_product->getMediaGalleryImages() as $key=>$image) :?>
                <li><a href="#productimage<?php echo $key; ?>" class="showproductimage" data-image="<?php echo
                    Mage::helper('catalog/image')->init($_product, 'image', $image->getFile())->resize(400, 400); ?>" data-zoom-image="<?php echo
                    Mage::helper('catalog/image')->init($_product, 'image', $image->getFile())->resize(800, 800); ?>">
                        <img src="<?php echo Mage::helper('catalog/image')->init($_product, 'image', $image->getFile())->resize(70, 70); ?>" />
                    </a></li>
            <?php endforeach; ?>
        </ul>
    </div>
<?php endif; ?>

    <div class="container-productimage">
        <?php foreach ($_product->getMediaGalleryImages() as $key=>$image) :?>
            <div class="inner-container-productimage">
                <div class="lupa"></div>
                <img id="productimage<?php echo $key; ?>" class="zoomelevate" src="<?php echo Mage::helper('catalog/image')->init($_product,
                    'image', $image->getFile())->resize(400, 400); ?>" data-zoom-image="<?php echo Mage::helper('catalog/image')->init($_product, 'image',
                    $image->getFile())->resize(800, 800); ?>" />
            </div>
            <?php break; ?>
        <?php endforeach; ?>

        <?php if($_product->getVideo()): ?>
            <div class="container-video">
                <?php echo $_product->getVideo(); ?>
            </div>
        <?php endif; ?>

        
    </div>


    <script type="text/javascript">
