<layout version="0.1.0">
    <default>
    	<reference name="root">
            <block type="core/template" name="gtm_head" template="gtm/gtm-head.phtml"/>
        </reference>

        <reference name="gtm_head">
            <block type="core/template" name="track_email" template="gtm/track-email.phtml"/>
        </reference>

        <reference name="after_body_start">
            <block type="core/template" name="gtm_body" template="gtm/gtm-body.phtml"/>
            <block type="core/template" name="script-konduto" template="konduto/konduto-script.phtml"/>
        </reference>

        <reference name="right">
            <action method="unsetChild"><name>cart_sidebar</name></action>
        </reference>
    </default>

    <!-- Tracker -->
    <cms_index_index translate="label">
        <reference name="gtm_head">
            <block type="core/template" name="track_home" template="gtm/track-home.phtml"/>
        </reference>
    </cms_index_index>

    <catalog_product_view>
        <reference name="gtm_head">
            <block type="core/template" name="track_view" template="gtm/track-view.phtml"/>
        </reference>
    </catalog_product_view>

    <catalogsearch_result_index>
        <reference name="gtm_head">
            <block type="catalog/product_list" name="track_search" template="gtm/track-search.phtml"/>
        </reference>
    </catalogsearch_result_index>

    <catalog_category_view>
        <reference name="gtm_head">
            <block type="catalog/product_list" name="track_category" template="gtm/track-category.phtml" />
        </reference>
    </catalog_category_view>

    <checkout_cart_index>
        <reference name="gtm_head">
            <block type="core/template" name="track_cart" template="gtm/track-cart.phtml"/>
        </reference>
    </checkout_cart_index>

    <onestepcheckout_index_index>
        <reference name="gtm_head">
            <block type="core/template" name="track_checkout" template="gtm/track-checkout.phtml"/>
        </reference>
        <reference name="onestepcheckout.onestep.form.paymentmethod">
            <block type="core/template" name="track-payment" template="gtm/track-payment.phtml"/>
        </reference>
    </onestepcheckout_index_index>

    <checkout_onepage_success>
        <remove name="left"/>
        <remove name="right"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>

        <reference name="gtm_head">
            <block type="checkout/onepage_success" name="track_success" template="gtm/track-success.phtml"/>
        </reference>
    </checkout_onepage_success>

    <checkout_onepage_index>
        <reference name="after_body_start">
            <block type="page/html" name="page_header" before="-" template="page/html/header-checkout.phtml">
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="page/html" name="page_fotter" before="-" template="page/html/footer-checkout.phtml">
            </block>
        </reference>
    </checkout_onepage_index>

    <customer_account_login>
        <reference name="gtm_head">
            <block type="core/template" name="track_cart" template="gtm/track-login.phtml"/>
        </reference>
        <reference name="after_body_start">
            <block type="page/html" name="page_header" before="-" template="page/html/header-checkout.phtml">
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="page/html" name="page_fotter" before="-" template="page/html/footer-checkout.phtml">
            </block>
        </reference>
    </customer_account_login>

    <customer_account_create>
        <reference name="gtm_head">
            <block type="core/template" name="track_cart" template="gtm/track-cadastro.phtml"/>
        </reference>
        <reference name="after_body_start">
            <block type="page/html" name="page_header" before="-" template="page/html/header-checkout.phtml">
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="page/html" name="page_fotter" before="-" template="page/html/footer-checkout.phtml">
            </block>
        </reference>
    </customer_account_create>
</layout>