/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<?php $_cartQty = $this->getSummaryCount() ?>
<?php if ($_cartQty != ""): ?>
    <div class="botao-carrinho">
        <?php echo $_cartQty; ?>
    </div>    
    <div class="minicart-wrapper">
        <h3><?php echo $this->__('My Cart'); ?></h3>
        <?php $_items = $this->getRecentItems() ?>
        <ul id="cart-sidebar" class="mini-products-list bxslider-mini-cart">
            <?php foreach($_items as $_item): ?>
                <?php echo $this->getItemHtml($_item) ?>
            <?php endforeach; ?>
        </ul>
            <?php if(Mage::getSingleton('customer/session')->isLoggedIn()) : ?>
                <?php $customer = Mage::getSingleton('customer/session')->getCustomer(); ?>
                <?php $id = $customer->getId(); ?>
                <?php $cartId = $this->getQuote()->getId(); ?>
                <?php $user = $cartId.":".$id.":"."D" ?>
                <?php $encryCart = base64_encode($user); ?>
                <?php $url = $encryCart . "S"; ?>
                <?php $urlS = base64_encode($url); ?>
                <?php $urlC = $urlS . "C"; ?>
                <?php $urlFinal = base64_encode($urlC); ?>
                <div class="minicart-actions">
                    <p><?php echo $this->__('Order Total') ?> <span><?php echo $this->helper('checkout')->formatPrice($this->helper('checkout/cart')->getQuote()->getGrandTotal()); ?></span></p>
                    <div class="clearfix"></div>
                    <a href='https://checkout.poupafarma.com.br/?cartID=<?php echo $cartId; ?>' title="<?php echo $this->__('Checkout') ?>" class="button checkout-button loading">
                        <span><span><?php echo $this->__('Checkout') ?></span></span>
                    </a>
                </div>
            <?php else: ?>
                <?php $id = 0 ?>
                <?php $cartId = $this->getQuote()->getId(); ?>
                <?php $user = $cartId.":".$id.":"."D" ?>
                <?php $encryCart = base64_encode($user); ?>
                <?php $url = $encryCart . "S"; ?>
                <?php $urlS = base64_encode($url); ?>
                <?php $urlC = $urlS . "C"; ?>
                <?php $urlFinal = base64_encode($urlC); ?>
                <div class="minicart-actions">
                    <p><?php echo $this->__('Order Total') ?> <span><?php echo $this->helper('checkout')->formatPrice($this->helper('checkout/cart')->getQuote()->getGrandTotal()); ?></span></p>
                    <div class="clearfix"></div>
                    <a href='https://checkout.poupafarma.com.br/?cartID=<?php echo $cartId; ?>' title="<?php echo $this->__('Checkout') ?>" class="button checkout-button loading">
                        <span><span><?php echo $this->__('Checkout') ?></span></span>
                    </a>
                </div>
            <?php endif ?>
            <?php $this->getQuote()->setDscToken($urlFinal)->save(); ?>
        
    </div>
    
<?php else : ?>
    <div class="minicart-wrapper">
        <p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
    </div>
<?php endif; ?>
