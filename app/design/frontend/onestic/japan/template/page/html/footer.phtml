<script type="text/javascript">

    function trocarImagemAlgolia() {

        jQuery("[class^=result], [class^=algoliasearch-autocomplete-hit]").each(function(index) {
            var _ids = jQuery(this).attr("category-ids");
            var pague_leve = jQuery(this).attr("pague-leve");
            var frete_gratis = jQuery(this).attr("frete-gratis");
            var before_special = Number(String(jQuery(this).attr("before-special")).replace(/[^0-9.-]+/g,""));
            var after_special = Number(String(jQuery(this).attr("after-special")).replace(/[^0-9.-]+/g,""));

            if (_ids) {
                var split_str = _ids.split(',');
                if (split_str.indexOf("26") !== -1) {
                    jQuery(this).find("img").attr("src", "/media/wysiwyg/Imagens/produto-sem-imagem-controle-especial-farmadelivery-277.jpg");
                }else if(split_str.indexOf("295") !== -1){
                    jQuery(this).find("img").attr("src", "/media/wysiwyg/Imagens/produto-sem-imagem-antimicrobiano-farmadelivery-277.jpg");
                }else if(split_str.indexOf("14") !== -1 && split_str.indexOf("28") !== -1){
                    jQuery(this).find("img").attr("src", "/media/wysiwyg/Imagens/caixa-genericos-tarjados-farmadelivery-277_1.jpg");
                }else if(split_str.indexOf("28") !== -1){
                    jQuery(this).find("img").attr("src", "/media/wysiwyg/caixa-tarjados-farmadelivery.jpg");
                }
            }

            if (pague_leve) {
                if(pague_leve == "Não") {
                    jQuery(this).find("#algolia_pague_leve").css("display", "none");
                }else{
                    jQuery(this).find("#algolia_pague_leve").css("background-color", "#F25300");
                    jQuery(this).find("#algolia_pague_leve").html(jQuery(this).find("#algolia_pague_leve").html().split("&lt;br /&gt;").join("<br />"));
                }
            }

            if (frete_gratis) {
                if(frete_gratis == "Não"){
                    jQuery(this).find("#algolia_frete_gratis").css("display", "none");
                }else{
                    jQuery(this).find("#algolia_frete_gratis").css("background-color", "#F25300");
                    jQuery(this).find("#algolia_frete_gratis").html(jQuery(this).find("#algolia_frete_gratis").html().split("&lt;br /&gt;").join("<br />"));
                }
            }

            if (before_special > 0) {
                var percent = 100 - (after_special * 100 / before_special);

                if(jQuery(this).find("#algolia_percent_discount").html() == 0) {
                    //jQuery(this).find("#algolia_percent_discount").html(jQuery(this).find("#algolia_percent_discount").html().split("0").join("-" + Math.round(percent) + "%"));
                    //jQuery(this).find("#algolia_percent_discount").css("background-color", "#ff7f0b");
                }
            }

        });

    }

    jQuery(window).load(function() {
        setTimeout(function() { trocarImagemAlgolia(); }, 300);
    });

    jQuery(document).bind('keypress, keydown', function(e){
        if(e.which) {
            setTimeout(function() { trocarImagemAlgolia(); }, 300);
        }
    });

    jQuery(document).click(function() {
        setTimeout(function() { trocarImagemAlgolia(); }, 300);
    });

</script>