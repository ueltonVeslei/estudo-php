<layout version="0.1.0">
    <!--
    Default layout, loads most of the pages
    -->
    <default>
        <!-- GTM -->
        <reference name="root">
            <block type="core/template" name="gtm_head" template="gtm/gtm-head.phtml"/>
        </reference>
        <reference name="gtm_head">
            <block type="core/template" name="track_email" template="gtm/track-email.phtml"/>
        </reference>
        <reference name="after_body_start">
            <block type="core/template" name="gtm_body" template="gtm/gtm-body.phtml"/>
            <block type="core/template" name="script-konduto" template="konduto/konduto-script.phtml"/>
        </reference>

        <reference name="head">
            <!-- CSS -->
            <action method="addCss"><stylesheet>css/slick.css</stylesheet></action>
            <action method="addCss"><stylesheet>css/slick-theme.css</stylesheet></action>
            <action method="addItem"><type>skin_css</type><name>css/onestic.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/portoseguro.css</name></action>

            <!-- JS -->
            <action method="addItem"><type>skin_js</type><name>js/slick.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery.ez-plus.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/minicart.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/lib/modernizr.custom.min.js</name></action>
        </reference>
        <remove name="left.newsletter"/>
        <remove name="left.permanent.callout"/>
        <remove name="right.permanent.callout"/>
        <reference name="right">
            <action method="unsetChild"><name>cart_sidebar</name></action>
        </reference>
    </default>

    <!-- Tracker -->
    <cms_index_index translate="label">
        <reference name="gtm_head">
            <block type="core/template" name="track_home" template="gtm/track-home.phtml"/>
        </reference>
    </cms_index_index>

    <catalog_product_view>
        <reference name="gtm_head">
            <block type="core/template" name="track_view" template="gtm/track-view.phtml"/>
        </reference>
        <reference name="content">
            <reference name="product.info">
                <block type="review/product_view_list" name="product.info.product_additional_data" as="reviews" template="review/product/view/list.phtml"/>
            </reference>
        </reference>
    </catalog_product_view>

    <catalogsearch_result_index>
        <reference name="gtm_head">
            <block type="catalog/product_list" name="track_search" template="gtm/track-search.phtml" />
        </reference>
    </catalogsearch_result_index>

    <catalog_category_view>
        
    </catalog_category_view>

    <checkout_cart_index>
        <reference name="gtm_head">
            <block type="core/template" name="track_cart" template="gtm/track-cart.phtml"/>
        </reference>
    </checkout_cart_index>

    <onestic_checkout_onepage_index>
        <reference name="gtm_head">
            <block type="core/template" name="track_checkout" template="gtm/track-checkout.phtml"/>
        </reference>
    </onestic_checkout_onepage_index>



    <!-- Fim Tracker -->

    <cms_page_view>
        <reference name="left">
            <block type="catalog/navigation" name="catalog.leftnav" template="catalog/navigation/leftCms.phtml" />
        </reference>
        <reference name="right">
            <block type="cms/block" name="banners-right">
                <action method="setBlockId"><block_id>banners_right_cms</block_id></action>
            </block>
        </reference>
    </cms_page_view>

    <catalog_category_view>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
        <reference name="left">
            <block type="cms/block" name="banner-left">
                <action method="setBlockId"><block_id>left_banner_category</block_id></action>
            </block>
        </reference>
        <reference name="gtm_head">
            <block type="catalog/product_list" name="track_category" template="gtm/track-category.phtml" />
        </reference>
    </catalog_category_view>

    <checkout_onepage_success>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="gtm_head">
            <block type="checkout/onepage_success" name="track_success" template="gtm/track-success.phtml"/>
        </reference>
    </checkout_onepage_success>

    <customer_account_create>
        <reference name="gtm_head">
            <block type="core/template" name="track_cart" template="gtm/track-cadastro.phtml"/>
        </reference>
        <reference name="after_body_start">
            <block type="page/html" name="page_header" before="-" template="page/html/header-checkout.phtml">
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="page/html" name="page_fotter" before="-" template="page/html/footer-checkout.phtml">
            </block>
        </reference>
    </customer_account_create>

    <customer_account_login>
        <reference name="gtm_head">
            <block type="core/template" name="track_cart" template="gtm/track-login.phtml"/>
        </reference>
        <reference name="after_body_start">
            <block type="page/html" name="page_header" before="-" template="page/html/header-checkout.phtml">
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="page/html" name="page_fotter" before="-" template="page/html/footer-checkout.phtml">
            </block>
        </reference>
    </customer_account_login>

    <checkout_onepage_index>
        <reference name="after_body_start">
            <block type="page/html" name="page_header" before="-" template="page/html/header-checkout.phtml">
            </block>
        </reference>
        <reference name="before_body_end">
            <block type="page/html" name="page_fotter" before="-" template="page/html/footer-checkout.phtml">
            </block>
        </reference>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/onestic.css</name><params/></action>
        </reference>
    </checkout_onepage_index>

    <customer_account>

        <reference name="left">
            <action method="unsetChild">
                <name>customer_account_navigation</name>
            </action>
            <action method="unsetChild">
                <name>cart_sidebar</name>
            </action>
        </reference>

        <reference name="content">
            <action method="insert">
                <name>customer_account_navigation</name>
            </action>
        </reference>

        <reference name="left">
            <block type="page/html" name="welcome" before="-" template="customer/account/dashboard/hello.phtml">
            </block>
        </reference>

        <reference name="customer_account_navigation">
            <action method="removeLinkByName"><name>address_book</name></action>
            <action method="removeLinkByName"><name>OAuth Customer Tokens</name></action>
            <action method="removeLinkByName"><name>downloadable_products</name></action>
            <action method="removeLinkByName"><name>newsletter</name></action>
            <action method="removeLinkByName"><name>account</name></action>
        </reference>
        <remove name="sale.reorder.sidebar"></remove>
    </customer_account>


</layout>