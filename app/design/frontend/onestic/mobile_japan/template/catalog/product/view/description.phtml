?>

<div id="alerta-texto">
	<?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('aviso-produto')->toHtml(); ?>
</div>

<div class="std">

	<?php $_helper = $this->helper('catalog/output'); ?>	
	<?php $_product = $this->getProduct(); ?>
	
	<?php if ($_product->getVideo()): ?>
		<div class="container-video">
            <?php echo $_product->getVideo(); ?>
        </div>
    <?php endif; ?>

    <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), nl2br($this->getProduct()->getDescription()), 'description') ?>
	
	<?php if($_product->getBula()!='') : ?>
		<div class="manual">
            <a  target="_blank" href="/media/upload/pdf/BULAS/<?php echo $_helper->productAttribute($_product, $this->htmlEscape($_product->getBula()), 'bula'); ?>">Baixar bula do produto - em PDF</a>
            Você precisa ter o Adobe Reader instalado em seu computador ou algum tipo de leitor de PDF instalado.
        </div>
    <?php endif; ?>
    <?php if($_product->getManual()!='') : ?>
		<div class="manual">
            <a  target="_blank" href="/media/upload/pdf/Manuais/<?php echo $_helper->productAttribute($_product, $this->htmlEscape($_product->getManual()), 'manual'); ?>">Baixar manual do produto - em PDF</a>
            Você precisa ter o Adobe Reader instalado em seu computador ou algum tipo de leitor de PDF instalado.
        </div>
    <?php endif; ?>
</div>
