<script>
    actualQty = 1;
    function addToQty( intQty, inputId )
    {
        actualQty += intQty;
        actualQty = (actualQty <= 1 ) ? 1 : actualQty;
        document.getElementById(inputId).value=actualQty;
    }
    
    function addToCartFromList(url, qty)
    {
        url+='qty/'+qty;
        setLocation(url);
    }

</script>

