<?xml version="1.0" encoding="UTF-8"?>

<layout version="0.1.0">
	
	<default>
		<reference name="content">
			<action method="unsetChild"><alias>breadcrumbs</alias></action>
			<block type="promocategory/breadcrumbs" name="breadcrumbs" as="breadcrumbs" template="promocategory/breadcrumbs.phtml" />
		</reference>
	</default>
	
    <catalog_product_view>
    	
    	<reference name="breadcrumbs">
            <action method="setType">
                <type>product</type>
            </action>
		</reference>  
        
        <reference name="left">
            <block type="promocategory/standard" name="promocategory.standard" template="promocategory/left.phtml" before="-" >
                <action method="setType">
                    <type>product</type>
                </action>
            </block>
        </reference>
    </catalog_product_view>
	
    <catalog_category_view>
    	
        <reference name="breadcrumbs">
            <action method="setType">
                <type>category</type>
            </action>
		</reference>            
        
        <reference name="left">
            <block type="promocategory/standard" name="promocategory.standard" template="promocategory/left.phtml" before="-" >
                <action method="setType">
                    <type>category</type>
                </action>
            </block>
        </reference>
    </catalog_category_view>
	
    <cms_page>
        <reference name="breadcrumbs">
            <action method="setType">
                <type>category</type>
            </action>
		</reference>            
        
        <reference name="left">
            <block type="promocategory/standard" name="promocategory.standard" template="promocategory/left.phtml" before="-" >
                <action method="setType">
                    <type>category</type>
                </action>
            </block>
        </reference>
    </cms_page>
	
</layout>