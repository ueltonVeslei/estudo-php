<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="top.menu">
             <action method="unsetChild" ifconfig="easy_navigation/top.menu/visibility"><name>catalog.topnav</name></action>
        </reference>
        <reference name="head">
            <action method="removeItem" ifconfig="easy_navigation/top.menu/visibility"><type>skin_css</type><name>css/menu.css</name></action>
            <action method="removeItem" ifconfig="easy_navigation/general/enabled"><type>js</type><name>varien/iehover-fix.js</name><params/><if>lt IE 7</if></action>
            <action method="addItem" ifconfig="easy_navigation/general/enabled"><type>skin_css</type><name>css/easynavigation.css</name></action>
            <action method="addItem" ifconfig="easy_navigation/general/enabled"><type>skin_js</type><name>js/easynavigation/iehover-fix.js</name><params/><if>lt IE 7</if></action>
            <action method="addItem" ifconfig="easy_navigation/general/enabled"><type>skin_js</type><name>js/easynavigation/accordion.js</name></action>
        </reference>
        <reference name="top.menu">
            <block type="easynavigation/navigation" name="navigation.top" >
                <action method="setTemplate" ifconfig="easy_navigation/general/enabled"><template>easynavigation/top.phtml</template></action>
            </block>
        </reference>
        <reference name="left">
            <block type="easynavigation/navigation" name="navigation.left" after="cart_sidebar" before="left.blog.menu">
                <action method="setTemplate" ifconfig="easy_navigation/general/enabled"><template>easynavigation/sideboxleft.phtml</template></action>
            </block>                
        </reference>
        <reference name="right">
            <block type="easynavigation/navigation" name="navigation.right" before="-" after="-" >
                <action method="setTemplate" ifconfig="easy_navigation/general/enabled"><template>easynavigation/sideboxright.phtml</template></action>
            </block>                
        </reference>
    </default>
</layout>