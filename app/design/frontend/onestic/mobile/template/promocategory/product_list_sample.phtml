<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>

<?php $_productCollection = $this->getLoadedProductCollection() ?>
<?php if (!$_productCollection->count()): ?>
    <p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
    <div class="category-products">
        <?php echo $this->getToolbarHtml() ?>
        <?php // List mode ?>
        <?php if ($this->getMode() != 'grid'): ?>
        <?php else: ?>
            <?php // Grid Mode ?>
            <?php $_collectionSize = $_productCollection->count() ?>
            <div class="clearer"></div>
            <!-- Start Grid -->
            <table class="products-grid" id="products-grid-table">
                <?php $_columnCount = $this->getColumnCount(); ?>
                <?php $_columnCount = 3; ?>
                <?php
                
                /* verifica se esta na home */
                $isHome = (Mage::getSingleton('cms/page')->getIdentifier() == 'home'  && Mage::app()->getFrontController()->getRequest()->getRouteName() == 'cms')? true: false;
                $promo = null;
                $model = Mage::getModel('promocategory/standard');
                
                $i = 0;
                foreach ($_productCollection as $_product):
                	if($isHome):
	                	$promo = $model->inCategoriesTree($_product->getCategoryIds());
	                	if($promo){
	                		// carrega a categoria promocional
	                		$category = Mage::getModel('catalog/category')->load($promo);
	                	}
                	endif;
                	
                ?>
                    <?php if ($i++ % $_columnCount == 0): ?>

                        <tr>
                        <?php endif ?>

                        <td>

                            <div class="inner">
                            	<?php if($promo && $isHome):?>
	                            	<div class="promocategory-image">
	                            		<img src="<?php echo Mage::getUrl() . 'media/catalog/category/' . $category->getData('promocategory_img_top');?>"
	                            			 width="150" height="30" />
	                            	</div>
								<?php endif;?>
                                <h2>					
                                    <div class="product-image">
                                        <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135, 135); ?>" width="135" height="135" alt="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" title="<?php echo $this->htmlEscape($this->getImageLabel($_product, 'small_image')) ?>" />
                                    </div>	
                                </h2>
                                <div class="product_box">
                                    <div class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>"><?php echo $this->htmlEscape($_product->getName()) ?></a></div>



                                    <?php if ($_product->getRatingSummary()): ?>
                                        <?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
                                    <?php endif; ?>

                                    <?php if ($_product->getTypeId() != "configurable") : ?>
                                        <span>ID: <?php print $_product->getSku(); ?></span><br>
                                    <?php endif; ?>

                                    <?php echo $this->getPriceHtml($_product, true) ?>

                                    <?php if (!$_product->isSaleable()): ?>
                                        <?php
                                        $alertUrl = $this->getUrl('productalert/add/stock', array(
                                            'product_id' => $_product->getId(),
                                            Mage_Core_Controller_Front_Action::PARAM_NAME_URL_ENCODED => $this->helper('catalog/product')->getEncodedUrl()
                                                ));
                                        ?>
                                        <a href="<?php print $alertUrl; ?>">

                                            <strong>Esgotado</strong><br />
                                            Avise-me quando chegar<br />
                                            <br />
                                        </a>
                                    <?php endif; ?>

                                    <!--
                    <ul class="add-to-links">
                                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                                                                <li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" ><?php echo $this->__('Add to Wishlist') ?></a></li>
                                    <?php endif; ?>
                                    <?php if ($_compareUrl = $this->getAddToCompareUrl($_product)): ?>
                                                                <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>" ><?php echo $this->__('Add to Compare') ?></a></li>
                                    <?php endif; ?>
                    </ul>
                                    -->
                                </div>
                            </div>
                        </td>

                        <?php if ($i % 3 == 0 && $i != $_collectionSize): ?>
                        </tr>
                    <?php endif ?>
                <?php endforeach ?>
                <?php for ($i; $i % 4 != 0; $i++): ?>
                <!-- <td class="empty">&nbsp;</td> -->
                <?php endfor ?>
                <?php if ($i % 4 == 0): ?>
                    </tr>
                <?php endif ?>
            </table>
            <script type="text/javascript">//decorateTable('products-grid-table')</script>
        <?php endif; ?>
        <?php echo $this->getToolbarHtml() ?>
    </div>
<?php endif; ?>
