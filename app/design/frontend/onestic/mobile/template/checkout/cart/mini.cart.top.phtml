/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<?php
$_cartQty = $this->getSummaryCount();
$_helperCheckout = Mage::helper('fd_linkcheckout');
?>
<?php if ($_cartQty != ""): ?>
    <div class="botao-carrinho">
        <?php echo $_cartQty; ?>
    </div>    
    <div class="minicart-wrapper">
        <h3><?php echo $this->__('My Cart'); ?></h3>
        <?php $_items = $this->getRecentItems() ?>
        <ul id="cart-sidebar" class="mini-products-list bxslider-mini-cart">
            <?php foreach($_items as $_item): ?>
                <?php echo $this->getItemHtml($_item) ?>
            <?php endforeach; ?>
        </ul>
        <?php $storeId = Mage::app()->getStore()->getStoreId(); ?>
        <?php if ($storeId == 1): ?>
            <div class="minicart-actions">
                <p><?php echo $this->__('Order Total') ?> <span><?php echo $this->helper('checkout')->formatPrice($this->helper('checkout/cart')->getQuote()->getGrandTotal()); ?></span></p>
                <div class="clearfix"></div>
                <a class="button view-cart-button"" href="<?php echo $this->getUrl('checkout/cart'); ?>">
                    <?php echo $this->__('Ver meu carrinho'); ?>
                </a>
                <!--a href='<?php echo $_helperCheckout->getCheckoutLink(); ?>' title="<?php echo $this->__('Checkout') ?>" class="button checkout-button loading">
                    <span><span><?php echo $this->__('Checkout') ?></span></span>
                </a-->
            </div>
        <?php else: ?>
            <div class="minicart-actions">
                <p><?php echo $this->__('Order Total') ?> <span><?php echo $this->helper('checkout')->formatPrice($this->helper('checkout/cart')->getQuote()->getGrandTotal()); ?></span></p>
                <div class="clearfix"></div>
                <button title="<?php echo $this->__('Checkout') ?>" class="button checkout-button loading" onclick="setLocation('<?php echo $this->getUrl('checkout/cart'); ?>');">
                    <span><span><?php echo $this->__('Checkout') ?></span></span>
                </button>
            </div>
        <?php endif; ?>
    </div>
    
<?php else : ?>
    <div class="minicart-wrapper">
        <p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
    </div>
<?php endif; ?>
