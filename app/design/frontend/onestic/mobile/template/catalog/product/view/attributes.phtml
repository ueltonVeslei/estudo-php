?>
<div class="std">
	<?php
	    $_helper = $this->helper('catalog/output');
	    $_product = $this->getProduct()
	?>
	<?php if($_additional = $this->getAdditionalData()): ?>
	<ul class="data-table" id="product-attribute-specs-table">
	    <?php foreach ($_additional as $_data): ?>
	     <?php if ( $_data['label'] != 'Cor' && $_data['value'] != 'NÃ£o' ): ?>	
	    <li>
	        <div class="label"><?php echo $this->__($_data['label']) ?></div>
	        <div class="data">
	        	<div class="data-<?php echo $_data['code'];?>">
	        		<?php echo $_helper->productAttribute($_product, nl2br($_data['value']), $_data['code']) ?>
	        	</div>
	        </div>
	    </li>
	    <?php endif; ?>
	    <?php endforeach; ?>
	</ul>
	<?php endif;?>
</div>