?>
<div class="results-view aw-as-results-view">
    <?php if($this->getHasResults()) : ?>
    <ul class="aw-indexes-list">
        <?php foreach($this->getResults() as $index) : ?>
        <?php if($index->getResultsCount()) : ?>
        <?php if($this->getCurrentType() == $index->getData('type')) : ?>
        <li class="active">
            <?php echo $this->getTypeLabel($index->getData('type')) ?>&nbsp;(<?php echo $this->getResultsCount($index) ?>)
        </li>
        <?php else : ?>
        <li>
            <a href="<?php echo $this->getUrl('*/*/*', array(
                    '_query' => array(
                        'q' => $this->getRequest()->getParam('q'),
                        'type' => $index->getData('type')
                    ))) ?>">
                <?php echo $this->getTypeLabel($index->getData('type')) ?>&nbsp;(<?php echo $this->getResultsCount($index) ?>)
            </a>
        </li>
        <?php endif ?>
        <?php endif ?>
        <?php endforeach ?>
    </ul>
    <div class="clear"></div>
    <?php echo $this->getContent() ?>
    <?php else : ?>
    <p class="note-msg">
        <?php echo $this->getNoResultText() ?>
    </p>
    <?php endif; ?>
</div>
