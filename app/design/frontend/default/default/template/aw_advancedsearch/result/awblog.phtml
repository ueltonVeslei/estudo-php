<div class="awas-blog-post-list">
    <?php echo $this->getPager() ?>
    <ul class="awas-blog-posts">
    <?php foreach($this->getResults() as $post) : ?>
        <li>
            <div class="title">
                <a href="<?php echo $this->getPostUrl($post->getId()) ?>"><?php echo $post->getData('title') ?></a>
            </div>
            <?php if(($postContent = $this->getPostShortContent($post))) : ?>
            <div class="short_content">
                <?php echo $postContent ?>
            </div>
            <div class="more_link">
                <a href="<?php echo $this->getPostUrl($post->getId()) ?>"><?php echo $this->__('Read More') ?></a>
            </div>
            <?php endif ?>
        </li>
    <?php endforeach ?>
    </ul>
    <?php echo $this->getPager() ?>
</div>
