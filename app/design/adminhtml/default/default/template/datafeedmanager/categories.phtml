                                            <script type='text/javascript'> 
                                            new AutoComplete('category_mapping" . $category['path'] . "', '" . $this->getUrl('*/*/categories') . "?s=', {cssClass:'autocomplete', delay: 0.25, resultFormat: AutoComplete.Options.RESULT_FORMAT_TEXT }); 
                                        </script>
				</div>";
                $a++;
