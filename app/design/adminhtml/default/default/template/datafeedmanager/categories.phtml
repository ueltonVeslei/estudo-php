
<script>
    document.observe('dom:loaded', function() {

        if ($('datafeedmanager_category_filter').value == 1) {
            $('category_filter_0').checked = false;
            $('category_filter_1').checked = true;
        }
        else {
            $('category_filter_0').checked = true;
