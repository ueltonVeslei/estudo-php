    <script type="text/javascript">
        var $j = jQuery.noConflict();
        $j(document).ready(function(){
            $j("#order-billing_address_postcode").focusout(function(){
                $j.ajax({
                    url: 'https://viacep.com.br/ws/'+$j(this).val()+'/json/unicode/',
                    dataType: 'json',
                    success: function(resposta){
                        $j("#order-billing_address_street0").val(resposta.logradouro);
                        $j("#order-billing_address_street3").val(resposta.bairro);
                        $j("#order-billing_address_city").val(resposta.localidade);
                        $j("#order-billing_address_region_id").val(resposta.uf);
                        $j("#order-billing_address_street1").focus();
                    }
                });
            });
        });
