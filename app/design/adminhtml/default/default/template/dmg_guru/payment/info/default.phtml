<div class="fieldset" id="payment_box_guru">
    <div class="hor-scroll">
        <p align="center"><a href="https://digitalmanager.guru/" target="_blank" title="Digital Manager Guru">
        <img src="<?php echo $this->getSkinUrl('images/dmg_guru/logo.png'); ?>" alt="Digital Manager Guru"></a></p>
        <?php if ($_specificInfo = $this->getSpecificInformation()) : ?>
            <table cellspacing="0" class="form-list">
                <?php foreach ($_specificInfo as $_label => $_value) : ?>
                    <tr>
                        <td class="value"><strong><?php echo $this->escapeHtml($_label); ?></strong>:
                            <br /><?php echo $_value; ?></td>
                    </tr>
                <?php endforeach; ?>
            </table>
        <?php endif; ?>
        <?php echo $this->getChildHtml() ?>
    </div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', function() {
        var fieldsetA = document.getElementById('payment_box_guru').parentElement;

        while (!(fieldsetA instanceof HTMLFieldSetElement)) {
            fieldsetA = fieldsetA.parentNode;
            if (!fieldsetA) {
                return null;
            }
        }

        if (fieldsetA != null) {
            fieldsetA.style.display = 'contents';
            var child = fieldsetA.lastElementChild;
            if (child && child.hasClassName('fieldset') === false) {
                child.innerText = '';
            }
        }
    });
</script>