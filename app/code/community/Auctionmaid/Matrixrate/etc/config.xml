<config>
   <modules>
   <!-- declare module's version information -->
        <Auctionmaid_Matrixrate>
    <!-- this version number will be used for database upgrades -->
          <version>2.0.1</version>
           <depends>
               <Mage_Shipping />
           </depends>
    </Auctionmaid_Matrixrate>
    </modules>
 <global>
<!-- declare model group for new module -->
    <models>
<!-- model group alias to be used in Mage::getModel() -->
      <Matrixrate>
<!-- base class name for the model group -->
        <class>Auctionmaid_Matrixrate</class>
      </Matrixrate>
	  <matrixrate_shipping>
			<class>Auctionmaid_Matrixrate_Model</class>
			<resourceModel>matrixrate_mysql4</resourceModel>
		</matrixrate_shipping>
		<matrixrate_mysql4>
			<class>Auctionmaid_Matrixrate_Model_Mysql4</class>
			<entities>
	  			<matrixrate>
					<table>shipping_matrixrate</table>
				</matrixrate>
			</entities>
      </matrixrate_mysql4>
    </models>
 
<!-- declare resource setup for new module -->
    <resources>
<!-- resource identifier -->
      <matrixrate_setup>
<!-- specify that this resource is a setup resource and used for upgrades -->
        <setup>
<!-- which module to look for install/upgrade files in -->
          <module>Auctionmaid_Matrixrate</module>
        </setup>
<!-- specify database connection for this resource -->
        <connection>
<!-- do not create new connection, use predefined core setup connection -->
          <use>core_setup</use>
        </connection>
            <matrixrate_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </matrixrate_write>
            <matrixrate_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </matrixrate_read>
      </matrixrate_setup>
    </resources>
    <sales>
	<shipping>
	    <carriers>
			<matrixrate>
				<class>Auctionmaid_Matrixrate_Model_Carrier_Matrixrate</class>
			</matrixrate>
	    </carriers>
	</shipping>
    </sales>
  </global>
    <default>
        <carriers>
            <matrixrate>
                <active>0</active>
                <remove_virtual>0</remove_virtual>
                <sallowspecific>0</sallowspecific>
                <allow_free_shipping_promotions>1</allow_free_shipping_promotions>
                <show_only_free>0</show_only_free>
                <free_method_text>Free Shipping</free_method_text>
                <cutoff_cost>50</cutoff_cost>
                <model>matrixrate_shipping/carrier_matrixrate</model>
                <name>MatrixRate</name>
                <title>Select Shipping Method</title>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>      
            </matrixrate>
        </carriers>
    </default>
</config>
