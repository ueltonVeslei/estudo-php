<config>
    <tabs>
        <logistico module="mgylogistico">
            <label>Logistico</label>
            <sort_order>125</sort_order>
        </logistico>
    </tabs>
    <sections>
        <logistico translate="label" module="mgylogistico">
            <label>Logistico Settings</label>
            <tab>logistico</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <hint>
                    <frontend_model>mgylogistico/adminhtml_system_config_fieldset_hint</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                </hint>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <compliance_wsi translate="title" module="mgylogistico">
                            <label>WS-I Compliance</label>
                            <frontend_model>mgylogistico/adminhtml_system_config_wsicompliance</frontend_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>WS-I Compliance must be ENABLED</comment>
                        </compliance_wsi>
                    </fields>
                </general>
                <orders translate="label">
                    <label>Orders</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <stores translate="title" module="mgylogistico">
                            <label>Exclude Stores</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>mgylogistico/system_source_config_store</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Orders belonging to selected stores will not be retrieved by Logistico</comment>
                        </stores>
                        <filter_date translate="title" module="mgylogistico">
                            <label>Date Range</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgylogistico/system_source_config_order_daterange</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Retrieves orders no older than selected choice</comment>
                        </filter_date>
                        <order_status translate="label">
                            <label>Order Statuses</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>mgylogistico/system_source_config_order_status</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>required-entry</validate>
                            <comment>Only orders with selected status will be retrieved by Logistico</comment>
                        </order_status>
                        <new_order_status translate="label">
                            <label>New Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>mgylogistico/system_source_config_order_statuspostlogistico</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Orders will have this status after being sent to Logistico</comment>
                        </new_order_status>
                    </fields>
                </orders>
                <shipments translate="label">
                    <label>Shipments</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                         <capture translate="label">
                            <label>Capture payment after ship</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </capture>
                        <notify_invoice translate="label">
                            <label>Notify client after invoiced</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <capture>1</capture>
                            </depends>
                        </notify_invoice>
                        <invoice_comment translate="label">
                            <label>Invoice Note</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <capture>1</capture>
                                <notify_invoice>1</notify_invoice>
                            </depends>
                        </invoice_comment>
                        <notify_shipment translate="label">
                            <label>Notify client when order shipped</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </notify_shipment>
                         <shipment_comment translate="label">
                            <label>Shipment Note</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <notify_shipment>1</notify_shipment>
                            </depends>
                        </shipment_comment>
                    </fields>
                </shipments>
            </groups>
        </logistico>
    </sections>
</config>