<config>
	
    <modules>
        <Saffira_Koin>
            <version>2.1.2</version>
        </Saffira_Koin>
    </modules>
	
    <global>
        <models>
            <Saffira_Koin>
                <class>Saffira_Koin_Model</class>
            </Saffira_Koin>
        </models>
        <resources>
            <Saffira_Koin_setup>
                <setup>
                    <module>Saffira_Koin</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </Saffira_Koin_setup>
            <Saffira_Koin_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </Saffira_Koin_write>
            <Saffira_Koin_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </Saffira_Koin_read>
        </resources>
        <helpers>
            <Saffira_Koin>
                <class>Saffira_Koin_Helper</class>
            </Saffira_Koin>
        </helpers>
        <blocks>
            <Saffira_Koin>
                <class>Saffira_Koin_Block</class>
            </Saffira_Koin>
            <adminhtml>
                <rewrite>
                    <sales_order_view>Saffira_Koin_Block_Adminhtml_Sales_Order_View</sales_order_view>
                    <sales_order_view>Saffira_Koin_Block_Adminhtml_Sales_Order_View</sales_order_view>
                </rewrite>
            </adminhtml>
        </blocks>
        <fieldsets>
            <sales_convert_quote_address>
                <koin_cpf>
                    <to_order>*</to_order>
                </koin_cpf>
                <koin_birthday>
                    <to_order>*</to_order>
                </koin_birthday>
                <koin_cnpj>
                    <to_order>*</to_order>
                </koin_cnpj>
                <koin_founding_date>
                    <to_order>*</to_order>
                </koin_founding_date>
            </sales_convert_quote_address>
            <sales_convert_order>
                <koin_cpf>
                    <to_invoice>*</to_invoice>
                    <to_shipment>*</to_shipment>
                    <to_cm>*</to_cm>
                </koin_cpf>
                <koin_birthday>
                    <to_invoice>*</to_invoice>
                    <to_shipment>*</to_shipment>
                    <to_cm>*</to_cm>
                </koin_birthday>
                <koin_cnpj>
                    <to_invoice>*</to_invoice>
                    <to_shipment>*</to_shipment>
                    <to_cm>*</to_cm>
                </koin_cnpj>
                <koin_founding_date>
                    <to_invoice>*</to_invoice>
                    <to_shipment>*</to_shipment>
                    <to_cm>*</to_cm>
                </koin_founding_date>
            </sales_convert_order>
        </fieldsets>
        <events>
            <sales_model_service_quote_submit_before>
                <observers>
                    <Saffira_Koin>
                        <type>singleton</type>
                        <class>Saffira_Koin_Model_Observer</class>
                        <method>requestKoin</method>
                    </Saffira_Koin>
                </observers>
            </sales_model_service_quote_submit_before>
            <checkout_onepage_controller_success_action>
                <observers>
                 <Saffira_Koin>
                        <type>singleton</type>
                        <class>Saffira_Koin_Model_Observer</class>
                        <method>changeStatus</method>
                    </Saffira_Koin>
                </observers>
            </checkout_onepage_controller_success_action>
                
        </events>
    </global>
	
    <frontend>
        <routers>
            <Saffira_Koin>
                <use>standard</use>
                <args>
                    <module>Saffira_Koin</module>
                    <frontName>koin</frontName>
                </args>
            </Saffira_Koin>
        </routers>
        <layout>
            <updates>
                <Saffira_Koin>
                    <file>koin.xml</file>
                </Saffira_Koin>
            </updates>
        </layout>
        <translate>
            <modules>
                <Saffira_Koin>
                    <files>
                        <default>Saffira_Koin.csv</default>
                    </files>
                </Saffira_Koin>
            </modules>
        </translate>
    </frontend>
	
    <adminhtml>
        <translate>
            <modules>
                <Saffira_Koin>
                    <files>
                        <default>Saffira_Koin.csv</default>
                    </files>
                </Saffira_Koin>
            </modules>
        </translate>

        <layout>
            <updates>
                <koin>
                    <file>koin.xml</file>
                </koin>
            </updates>
        </layout>        
    </adminhtml>
	
    <default>
        <payment>
            <Saffira_Koin_Standard>
                <model>Saffira_Koin_Model_Standard</model>
                <active>0</active>
                <url>http://api.koin.com.br/V1/TransactionService.svc/Request</url>
                <order_status>pending</order_status>
                <processing_order_status></processing_order_status>
                <title>Koin PÃ³s-Pago</title>
                <auto_capture>1</auto_capture>
                <consumer_key>sua_consumer_key_koin</consumer_key>
                <secret_key>sua_secret_key_koin</secret_key>
            </Saffira_Koin_Standard>
            <koin_configuracoes_avancadas>
                <koin_produto_codigo>21</koin_produto_codigo>
            </koin_configuracoes_avancadas>
        </payment>
    </default>

</config>
