<config>
    <modules>
        <MageWorx_CustomerPlus>
            <version>1.0.0</version>
        </MageWorx_CustomerPlus>
    </modules>
    
    <global>
        <models>
            <customerplus>
                <class>MageWorx_CustomerPlus_Model</class>
                <resourceModel>customerplus_mysql4</resourceModel>
            </customerplus>
            <customerplus_mysql4>
                <class>MageWorx_CustomerPlus_Model_Mysql4</class>
            </customerplus_mysql4>
        </models>
        <resources>
            <customerplus_setup>
                <setup>
                    <module>MageWorx_CustomerPlus</module>
                    <class>MageWorx_CustomerPlus_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customerplus_setup>
            <customerplus_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customerplus_write>
            <customerplus_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customerplus_read>
        </resources>
        <blocks>
            <customerplus>
                <class>MageWorx_CustomerPlus_Block</class>
            </customerplus>
        </blocks>
        <helpers>
            <customerplus>
                <class>MageWorx_CustomerPlus_Helper</class>
            </customerplus>
        </helpers>
    </global>
    
    <adminhtml>
        <acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
			</resources>
		</acl>
        <layout>
            <updates>
                <customerplus>
                    <file>customerplus.xml</file>
                </customerplus>
            </updates>
        </layout>
    </adminhtml>
    
    <default></default>
</config>