<config>
    <modules>
        <MageWorx_ProductPlus>
            <version>1.0.0</version>
        </MageWorx_ProductPlus>
    </modules>
    
    <global>
        <models>
            <productplus>
                <class>MageWorx_ProductPlus_Model</class>
                <resourceModel>productplus_mysql4</resourceModel>
            </productplus>
            <productplus_mysql4>
                <class>MageWorx_ProductPlus_Model_Mysql4</class>
            </productplus_mysql4>
        </models>
        <resources>
            <productplus_setup>
                <setup>
                    <module>MageWorx_ProductPlus</module>
                    <class>MageWorx_ProductPlus_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productplus_setup>
            <productplus_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productplus_write>
            <productplus_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productplus_read>
        </resources>
        <blocks>
            <productplus>
                <class>MageWorx_ProductPlus_Block</class>
            </productplus>
        </blocks>
        <helpers>
            <productplus>
                <class>MageWorx_ProductPlus_Helper</class>
            </productplus>
        </helpers>
    </global>
    
    <adminhtml>
        <acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
			</resources>
		</acl>
        <layout>
            <updates>
                <productplus>
                    <file>productplus.xml</file>
                </productplus>
            </updates>
        </layout>
    </adminhtml>
    
    <default></default>
</config>