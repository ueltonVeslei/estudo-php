<config>
    <acl>
        <resources>
            <admin>
                <children>
                    <integracommerce module="integracommerce">
                        <title>Integracommerce</title>
                        <sort_order>711</sort_order>
                        <children>

                            <integration translate="title" module="integracommerce">
                                <title>Exportação</title>
                                <sort_order>1</sort_order>
                                <action>integracommerce/adminhtml_integration</action>
                            </integration>

                            <orders translate="title" module="integracommerce">
                                <title>Gerenciar Pedidos</title>
                                <sort_order>2</sort_order>
                                <action>integracommerce/adminhtml_orders</action>
                            </orders>

                            <report translate="title" module="integracommerce">
                                <title>Relatório</title>
                                <sort_order>3</sort_order>
                                <action>integracommerce/adminhtml_report</action>
                            </report>

                            <integracommerce_configuration translate="title" module="integracommerce">
                                <title>Configuração</title>
                                <sort_order>4</sort_order>
                                <action>adminhtml/system_config/edit/section/integracommerce/</action>
                            </integracommerce_configuration>

                        </children>
                    </integracommerce>
                </children>
            </admin>
        </resources>
    </acl>
	<menu>
            <integracommerce module="integracommerce">
                <title>Integracommerce</title>
                <sort_order>711</sort_order>
                <children>

                    <integration translate="title" module="integracommerce">
