<?xml version="1.0"?>
<config>
    <modules>
        <Custom_TagModule>
            <version>1.0.0</version>
        </Custom_TagModule>
    </modules>
    <global>
        <models>
            <tagmodule>
                <class>Custom_TagModule_Model</class>
            </tagmodule>
        </models>
        <resources>
            <custom_tagmodule_setup>
                <setup>
                    <module>Custom_TagModule</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </custom_tagmodule_setup>
            <custom_tagmodule_setup_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </custom_tagmodule_setup_write>
            <custom_tagmodule_setup_read>
                <connection>
                        <use>core_read</use>
                    </connection>
            </custom_tagmodule_setup_read>
        </resources>  
    </global>
</config>