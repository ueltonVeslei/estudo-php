<?xml version="1.0"?>
<config>
    <tabs>
        <onestic>
            <label>Onestic</label>
            <sort_order>200</sort_order>
        </onestic>
    </tabs>
    <sections>
        <onestic_skyhub translate="label" module="onestic_skyhub">
            <label>Skyhub</label>
            <tab>onestic</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <geral translate="label" module="core">
                    <label>Geral</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <email translate="label">
                            <label>Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Informe o email de acesso</comment>
                        </email>
                        <token translate="label">
                            <label>Token</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Token de acesso</comment>
                        </token>
                        <accountmanager translate="label">
                            <label>Account Manager Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Chave de acesso do Account Manager</comment>
                        </accountmanager>
                        <limit translate="label">
                            <label>Limite de produtos</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Limite de produtos enviados por lote de sincronização</comment>
                        </limit>
                        <product_days translate="label">
                            <label>Dias para atualização</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Número de dias para atualização dos produtos</comment>
                        </product_days>
                        <excludes translate="label">
                            <label>Excluir produtos das categorias</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Informar os códigos das categorias separados por vírgula</comment>
                        </excludes>
                        <categories translate="label">
                            <label>Categorias</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>Onestic_Skyhub_Model_Source_Categories</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Selecione as categorias que devem ser enviadas à Skyhub.</comment>
                        </categories>
                        <orders_per_page translate="label">
                            <label>Pedidos por Página</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Onestic_Skyhub_Model_Source_Perpage</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </orders_per_page>
                        <products_per_page translate="label">
                            <label>Produtos por Página</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Onestic_Skyhub_Model_Source_Perpage</source_model>
                            <sort_order>71</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </products_per_page>
                        <current_page>
                        	<label>Página Corrente de Pedidos</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>72</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Informe o número da página preferencial de pedidos.</comment>
                        </current_page>
                        <current_populate_page>
                        	<label>Página Corrente da Importação de Pedidos</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>73</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Página corrente da importação de pedidos para o Painel Skyhub.</comment>
                        </current_populate_page>
                        <current_product_page>
                        	<label>Página Corrente da Importação de Produtos</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>74</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Página corrente da importação de produtos para o Painel Skyhub.</comment>
                        </current_product_page>
                        <product_status_import translate="label">
                            <label>Status de importação de produtos</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Onestic_Skyhub_Model_Source_StatusProduct</source_model>
                            <sort_order>75</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </product_status_import>
                        <exported translate="label">
							<label>Ativar aviso de exportação?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</exported>
						<cron_products translate="label">
							<label>Ativar CRON produtos?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>90</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</cron_products>
						<cron_orders translate="label">
							<label>Ativar CRON pedidos?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</cron_orders>
						<debug translate="label">
							<label>Ativar Debug?</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>110</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</debug>
                    </fields>
                </geral>
            </groups>
        </onestic_skyhub>
    </sections>
</config>