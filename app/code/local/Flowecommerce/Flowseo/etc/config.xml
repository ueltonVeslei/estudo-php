<config>
    <modules>
        <Flowecommerce_Flowseo>
            <version>0.1.0</version>
        </Flowecommerce_Flowseo>
    </modules>
    <global>
        <models>
            <flowseo>
                <class>Flowecommerce_Flowseo_Model</class>
            </flowseo>
        </models>
        <blocks>
            <flowseo>
                <class>Flowecommerce_Flowseo_Block</class>
            </flowseo>
        </blocks>
        <helpers>
            <flowseo>
                <class>Flowecommerce_Flowseo_Helper</class>
            </flowseo>
        </helpers>
    </global>
    <frontend>
        <translate>
            <modules>
                <Flowecommerce_Flowseo>
                    <files>
                        <default>Flowecommerce_Flowseo.csv</default>
                    </files>
                </Flowecommerce_Flowseo>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Flowecommerce_Flowseo>
                    <files>
                        <default>Flowecommerce_Flowseo.csv</default>
                    </files>
                </Flowecommerce_Flowseo>
            </modules>
        </translate>
    </adminhtml>
    <adminhtml>
        <layout>
            <updates>
                <flowseo module="Flowecommerce_Flowseo">
                    <file>flowseo.xml</file>
                </flowseo>
            </updates>
        </layout>
        <menu>
            <catalog>
                <children>
                    <flowseo>
                        <title>Flow SEO</title>
                        <sort_order>100</sort_order>
                        <children>
                            <updateMetadesc>
                                <title>Update Meta Descriptions</title>
                                <action>flowseo/admin/updatemetadescription</action>
                                <sort_order>10</sort_order>
                            </updateMetadesc>
                        </children>
                    </flowseo>
                </children>
            </catalog>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <config>
                                    <children>
                                        <flowseo translate="title" module="flowseo">
                                            <title>FlowSEO</title>
                                        </flowseo>
                                    </children>
                                </config>
                            </children>
                        </catalog>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <admin>
        <routers>
            <flowseo>
                <use>admin</use>
                <args>
                    <module>Flowecommerce_Flowseo</module>
                    <frontName>flowseo</frontName>
                </args>
            </flowseo>
        </routers>
    </admin>
</config>