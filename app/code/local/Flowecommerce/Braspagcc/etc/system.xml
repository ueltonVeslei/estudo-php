<config>
   <sections>
        <payment>
            <groups>
               <braspagcc translate="label">
                    <label>[Braspag] Cartão de Crédito</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Habilitado</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <title translate="label">
                            <label>Titulo</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </title>
												<LojaID translate="label">
                            <label>Loja ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </LojaID>
												<EmailDeProcessamento translate="label">
                            <label>Enviar E-mail Para</label>
                            <comment>E-mail para envio com os dados do processamento automático dos pedidos.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </EmailDeProcessamento>
						<HorasParaCancelar translate="label">
                            <label>Horas Para Cancelar Pedido</label>
                            <comment>Depois de quantas horas o pedido será cancelado.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </HorasParaCancelar>
						<MensagemDeCancelamento translate="label">
                            <label>Mensagem de Cancelamento</label>
                            <comment>Mensagem enviada para o cliente no cancelamento do Pedido.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </MensagemDeCancelamento>                                                
                        <cctypes translate="label">
                            <label>Bandeiras</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>Flowecommerce_Braspagcc_Model_Source_cctype</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cctypes>
                        <bandeiraParcelamento translate="label">
                            <label>Parcelamento default</label>
                            <comment>Bandeira para ser utilizada no calculo do parcelamento na exibicao das categorias.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>Flowecommerce_Braspagcc_Model_Source_cctype</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </bandeiraParcelamento>
                        <sort_order translate="label">
                            <label>Ordem</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sort_order>
                    </fields>
                </braspagcc>
            </groups>
        </payment>       
    </sections>
</config>
